
<form class="sign-up-form">
    <div class="form-title">
        <h2>Sign Up</h2>
    </div>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" placeholder="username" name="username" class="username" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" placeholder="email" name="email" class="email" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" placeholder="********" name="password" autocomplete="on" required>
    </div>
    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" placeholder="********" name="confirmPassword" autocomplete="on" required>
    </div>
    <!-- <div class="form-group upload-pic-sign">
        <label for="photo">Upload Picture</label>
        <input type="file" accept="image/*" class="new-photo" id="photo" name="photo">
    </div> -->
    <button class="btn-signup-form">Create Account</button>
</form>